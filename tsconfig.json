{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ],
            "components/*": [
                "components/*"
            ],
            "pages/*": [
                "pages/*"
            ],
            "containers/*": [
                "containers/*"
            ],
            "data/*": [
                "data/*"
            ],
            "helpers/*": [
                "helpers/*"
            ],
            "hooks/*": [
                "hooks/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "types": [
        "react",
        "react-dom",
        "antd",
        "node",
        "jest",
        "@types/testing-library__jest-dom"
    ],
    "include": [
        "src",
        "./jest.setup.ts"
    ]
}